@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item ml-4 mb-2">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, 
            <span>@User.Identity.Name!</span></a>
    </li>
    <li class="nav-item ml-4 mb-2 buttonNav">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button
            type="submit" class="btn btn-outline-danger">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item ml-4 mb-2 buttonNav">
        <a class="btn btn-outline-primary" role="button" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item ml-4 mb-2 buttonNav">
        <a class="btn btn-outline-success" role="button" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
